{{ form_open({'class': 'form-horizontal'}) }}
    <fieldset>
        <div class="form-group">
            <label for="username" class="control-label">UserName</label>
            {{ form_input( 'username', input_post('username', user.username), { 'class': 'col-md-4 form-control', 'placeholder': 'UserName' } ) }}
        </div>

        <div class="form-group">
            <label for="password" class="control-label">Password</label>
            {{ form_password( 'password', input_post('password', user.password), { 'class': 'col-md-4 form-control', 'placeholder': 'Password' } ) }}
        </div>
        <div class="form-group">
            <label for="group" class="control-label">Group</label>
            {{ form_input( 'group', input_post('group', user.group), { 'class': 'col-md-4 form-control', 'placeholder': 'Group' } ) }}
        </div>
        <div class="form-group">
            <label for="Email" class="control-label">email</label>
            {{ form_input( 'email', input_post('email', user.email), { 'class': 'col-md-4 form-control', 'placeholder': 'Email' } ) }}
        </div>
        <div class="form-group">
            <label for="last_login" class="control-label">Last login</label>
            {{ form_input( 'last_login', input_post('last_login', user.last_login), { 'class': 'col-md-4 form-control', 'placeholder': 'Last login' } ) }}
        </div>
        <div class="form-group">
            <label for="login_hash" class="control-label">Login hash</label>
            {{ form_input( 'login_hash', input_post('login_hash', user.login_hash), { 'class': 'col-md-4 form-control', 'placeholder': 'Login hash' } ) }}
        </div>
        <div class="form-group">
            <label for="profile_fields" class="control-label">Profile fields</label>
            {{ form_input( 'profile_fields', input_post('profile_fields', user.profile_fields), { 'class': 'col-md-8 form-control', 'placeholder': 'Profile fields', 'row' : 8} ) }}
        </div>

        <div class="form-group">
            <label class='control-label'>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </fieldset>
{{ form_close() }}
